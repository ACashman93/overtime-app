<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: "Overtime App Notification", sticky: false, image: :progress, time: 1500 ) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:errpr], title: "Overtime App Notification", sticky: false, image: :error, time: 1500 ) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: "Overtime App Notification", sticky: false, image: :success, time: 1500 ) %>
<% end %>
