<% recent_audit_items.each do |recent_audit_items| %>
  <div class='homepage-block col-md-3'>
    <h4>
      <%= recent_audit_items.user.full_name %>
    </h4>

    <p>
      <span class= 'pending-details'>Week starting on:</span> <%= recent_audit_items.start_date %>
    </p>

    <p>
      <span class= 'pending-details'>Submitted on:</span> <%= recent_audit_items.end_date || status_label_helper('pending') %>
    </p>

    <p>
      <span class= 'pending-details'>Status:</span> <%= status_label_helper recent_audit_items.status %>
    </p>
  </div>
<% end %>
